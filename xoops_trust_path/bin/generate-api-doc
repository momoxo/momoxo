#!/usr/bin/env bash
WORKING_DIR=/tmp/momonga-docs
SAMI_CONFIG_PATH="$(php -r "echo dirname(dirname(realpath('$0')));")/sami.php"
rm -rf $WORKING_DIR
mkdir -p $WORKING_DIR
cd $WORKING_DIR
curl -s https://getcomposer.org/installer | php
echo '{"require":{"sami/sami":"dev-master"}}' > composer.json
chmod +x composer.phar
./composer.phar install
./vendor/bin/sami.php update "$SAMI_CONFIG_PATH"
